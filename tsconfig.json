{
	"compilerOptions": {
		"lib": ["ESNext"],
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"target": "ES2022",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"declaration": true,
		"allowJs": true,
		"noEmit": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true
	},
	"include": ["src/**/*.ts", "frontends/config.ts"]
}
